<table class="table table-hover">
    <thead class="text-center">
        <tr>
            <th scope="col">Product</th>
            <th scope="col">Price</th>
            <th scope="col">Net Price</th>
        </tr>
    </thead>
    <tbody class="text-center">
        {{#each order}}
        <tr data-id={{id}}>
            <td>{{productName}}</td>
            <td>{{orderQuantity}}</td>
            <td>{{price}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>